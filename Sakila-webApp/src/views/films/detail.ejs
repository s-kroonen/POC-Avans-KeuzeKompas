<% layout('layout') -%>
<div class="row">
 <div class="col-md-8">
 <h1 class="mb-3"><%= film.title %></h1>
 <p class="text-muted">(<%= film.release_year || 'N/A' %>) · <%=film.language_name %> · <%= film.rating %></p>
 <p><%= film.description %></p>
 <ul class="list-group list-group-flush my-3">
 <li class="list-group-item"><strong>Length:</strong> <%= film.length %> min</li>
 <li class="list-group-item"><strong>Rental Duration:</strong> <%=film.rental_duration %> days</li>
 <li class="list-group-item"><strong>Rental Rate:</strong> $<%=film.rental_rate %></li>
 <li class="list-group-item"><strong>Replacement Cost:</strong> $<%=film.replacement_cost %></li>
 </ul>
 <a class="btn btn-outline-secondary" href="/films">Back to list</a>
 </div>
</div>
