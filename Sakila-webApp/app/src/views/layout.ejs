<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= typeof title !== 'undefined' ? title : 'Sakila' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/custom.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Sakila WebApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/films">Films</a></li>
                    <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                    <% if (user && user.role === 'admin') { %>
                        <li class="nav-item"><a class="nav-link" href="/admin/manageStores">Manage Stores</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/manageManagers">Manage Managers</a></li>
                    <% } %>
                    <% if (user && user.role === 'manager') { %>
                        <li class="nav-item"><a class="nav-link" href="/staff/invite">Invite Staff</a></li>
                    <% } %>
                    <% if (user && user.role === 'staff') { %>
                        <li class="nav-item"><a class="nav-link" href="/staff/dashboard">Staff Dashboard</a></li>
                    <% } %>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container">
        <%- body %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>