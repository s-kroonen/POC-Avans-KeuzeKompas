<h2>
  <%= staff.id ? "Edit Staff " + staff.id : "Create Staff" %>
</h2>

<form method="POST" action="/admin/staff/<%= staff.id || " new" %>">
  <% if (staff.id) { %>
    <input type="hidden" name="staff_id" value="<%= staff.id %>">
    <% } %>
      <div class="mb-3">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" value="<%= staff.first_name || "" %>">
      </div>
      <div class="mb-3">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" value="<%= staff.last_name || "" %>">
      </div>
      <div class="mb-3">
        <label>Email</label>
        <input type="email" name="email" class="form-control" value="<%= staff.email || "" %>">
      </div>
      <div class="mb-3">
        <label>Username</label>
        <input type="text" name="username" class="form-control" value="<%= staff.username || "" %>">
      </div>
      <div class="mb-3">
        <label>Password (leave blank to keep existing)</label>
        <input type="password" name="password" class="form-control">
      </div>
      <div class="mb-3">
        <label>Store</label>
        <select name="store_id" class="form-control">
          <% stores.forEach(st=> { %>
            <option value="<%= st.id %>" <%=staff.store_id==st.id ? "selected" : "" %>>
              Store <%= st.id %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label>Is Admin</label>
        <input type="checkbox" name="is_admin" value="1" <%=staff.is_admin ? "checked" : "" %>>
      </div>
      <div class="mb-3">
        <label>Is Active</label>
        <input type="checkbox" name="is_active" value="1" <%=staff.is_active ? "checked" : "" %>>
      </div>



      <h3>Address</h3>
      <div class="mb-3">
        <label>Address</label>
        <input type="text" name="address" class="form-control" value="<%= staff.address || "" %>">
      </div>
      <div class="mb-3">
        <label>District</label>
        <input type="text" name="district" class="form-control" value="<%= staff.district || "" %>">
      </div>
      <div class="mb-3">
        <label>Postal Code</label>
        <input type="text" name="postal_code" class="form-control" value="<%= staff.postal_code || "" %>">
      </div>
      <div class="mb-3">
        <label>Phone</label>
        <input type="text" name="phone" class="form-control" value="<%= staff.phone || "" %>">
      </div>
      <div class="mb-3">
        <label>City</label>
        <input type="text" name="city" class="form-control" value="<%= staff.city || "" %>">
      </div>
      <div class="mb-3">
        <label>Country</label>
        <select name="country" class="form-control">
          <% countries.forEach(c=> { %>
            <option value="<%= c.country %>" <%=staff.country===c.country ? "selected" : "" %>><%= c.country %>
            </option>
            <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-success">Save</button>
</form>
<% if (staff.id) { %>
  <form method="POST" action="/admin/staff/<%= staff.id %>/remove" style="display:inline;">
    <button type="submit" class="btn btn-danger">Remove</button>
  </form>
  <% } %>