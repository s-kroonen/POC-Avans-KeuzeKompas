<h2><%= staff.staff_id ? "Edit Staff " + staff.staff_id : "Create Staff" %></h2>

<form method="POST" action="/admin/staff/<%= staff.id || "new" %>">
  <div class="mb-3">
    <label>First Name</label>
    <input type="text" name="first_name" class="form-control" value="<%= staff.first_name || "" %>">
  </div>
  <div class="mb-3">
    <label>Last Name</label>
    <input type="text" name="last_name" class="form-control" value="<%= staff.last_name || "" %>">
  </div>
  <div class="mb-3">
    <label>Email</label>
    <input type="email" name="email" class="form-control" value="<%= staff.email || "" %>">
  </div>
  <div class="mb-3">
    <label>Username</label>
    <input type="text" name="username" class="form-control" value="<%= staff.username || "" %>">
  </div>
  <div class="mb-3">
    <label>Password (leave blank to keep existing)</label>
    <input type="password" name="password" class="form-control">
  </div>
  <div class="mb-3">
    <label>Store</label>
    <select name="store_id" class="form-control">
      <% stores.forEach(st => { %>
        <option value="<%= st.store_id %>" <%= staff.store_id == st.store_id ? "selected" : "" %>>
          Store <%= st.store_id %>
        </option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3">
    <label>Is Admin</label>
    <input type="checkbox" name="is_admin" value="1" <%= staff.is_admin ? "checked" : "" %>>
  </div>

  <button type="submit" class="btn btn-success">Save</button>
</form>
