<h1 class="mb-4 text-center">Your Profile</h1>
<div class="card mx-auto" style="max-width: 400px;">
  <div class="card-body">
    <h5 class="card-title mb-3"><%= user.first_name %> <%= user.last_name %></h5>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Username:</strong> <%= user.first_name || user.email %></li>
      <li class="list-group-item"><strong>Email:</strong> <%= user.email %></li>
      <li class="list-group-item"><strong>Role:</strong> <%= user.role %></li>
      <li class="list-group-item"><strong>Store ID:</strong> <%= user.store_id %></li>
      <li class="list-group-item"><strong>Address:</strong> <%= user.address %></li>
      <li class="list-group-item"><strong>City:</strong> <%= user.city %></li>
    </ul>
  </div>
</div>

<% if (user.role === 'manager') { %>
  <div class="mt-4">
    <h5>Manage Staff</h5>
    <a href="/staff/invite" class="btn btn-primary">Invite Staff</a>
  </div>
<% } %>

<% if (user.role === 'admin') { %>
  <div class="mt-4">
    <h5>Admin Actions</h5>
    <a href="/admin/manageStores" class="btn btn-primary">Manage Stores</a>
    <a href="/admin/manageManagers" class="btn btn-primary">Manage Managers</a>
    <a href="/admin/onboardAdmin" class="btn btn-primary">Onboard Admin</a>
  </div>
<% } %>